@using (Html.BeginForm("Rigester", "Home", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
<div class="form-horizontal">
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <div class="form-group">
        @Html.LabelFor(x=>x.Adm_Name,htmlAttributes:new { @class= "label-control col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(x=>x.Adm_Name,new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(x => x.Adm_Name,"", new { @class="text-danger"})
        </div>
    </div>


    <div class="form-group">
        @Html.LabelFor(x => x.Adm_Phone, htmlAttributes: new { @class = "label-control col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(x => x.Adm_Phone, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(x => x.Adm_Phone, "", new { @class = "text-danger" })
        </div>

    </div>
    <div class="form-group">
        @Html.LabelFor(x => x.Adm_Gender, htmlAttributes: new { id = "Gender", @class = "label-control col-md-2" })
        <div class="col-md-10">
            @Html.DropDownList("Adm_Gender", new List<SelectListItem>
           {
               new SelectListItem {Text="Male", Value="Male" },
               new SelectListItem {Text="Female",Value="Female" }
           },
"Select Admin Gender",
new {id="Drop", @class = "form-control" }
)
            @Html.ValidationMessageFor(x => x.Adm_Gender, "", new { @class = "text-danger" })
        </div>
    </div>



    <div class="form-group">
        @Html.LabelFor(x => x.Adm_Email, htmlAttributes: new { @class = "label-control col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(x => x.Adm_Email, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(x => x.Adm_Email, "", new { @class = "text-danger" })
        </div>

    </div>

    <div class="form-group">
        @Html.LabelFor(x => x.Adm_Password, htmlAttributes: new { @class = "label-control col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(x => x.Adm_Password, new { htmlAttributes = new {id= "Password" ,@class = "form-control" } })
            @Html.ValidationMessageFor(x => x.Adm_Password, "", new { @class = "text-danger" })
        </div>

    </div>

    <div class="form-group">
        @Html.LabelFor(x => x.Adm_Confirm_Password, htmlAttributes: new { @class = "label-control col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(x => x.Adm_Confirm_Password, new { htmlAttributes = new { id = "Confirm_Password", @class = "form-control",
           required = "required" } })
            @Html.ValidationMessageFor(x => x.Adm_Confirm_Password, "", new { @class = "text-danger" })
        </div>
    </div>
        <div class="form-group">
            @Html.LabelFor(x => x.Adm_Image_Path, htmlAttributes: new { @class = "label-control col-md-2" })
            <div class="col-md-10">
                <input type="file" id="ImageFile" name="ImageFile" class="form-control" required />
                @Html.ValidationMessageFor(x => x.Adm_Image_Path, "", new { @class = "text-danger" })
            </div>

        </div>

    <div class="row padding_and_Margin">
        
                <input type="submit" value="Save" id="Save" class="btn button" />
           
    </div>
    @*<div class="row">
    
    <div class="col-md-2">
         @Html.ActionLink("login", "login","Home",null,new { @class = "btn btn-default" })
    </div>
</div>*@
    </div>
   } 


<script src="~/Scripts/jquery-1.10.2.js"></script>
<script>
    $(document).ready(function ()
    {
        $("#Save").click(function () {

            var password = document.getElementById("Password").value;
            var Confirm_Password = document.getElementById("Confirm_Password").value;
            var gender=document.getElementById("Drop").value;
            if (password != Confirm_Password) {
                alert("The Password And Confirm Password Not Match");
                
            else if(@Session["Gender"]!=gender||Session["Gender"]==null)
                    alert("the model is not vaild");
            }





        });

    });

</script>