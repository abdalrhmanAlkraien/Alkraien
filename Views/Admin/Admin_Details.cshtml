@model adminSection.Models.Admin
@{
    ViewBag.Title = "Admin_Details";
    Layout = "~/Views/Shared/_ParentLayout.cshtml";     
}


<style>
     .p {
        padding: 10px;
        text-align: center;
        margin: 10px;
    }
    .bt {
        padding: 10px;
        margin: 10px;
    }
    .hi {
        float: right;
    }

    .image {
        border-radius: 50%;
        padding: 10px;
        margin: 10px;
        float: right;
    }

    .text {
        padding: 10px;
        margin: 10px;
        text-align: center;
    }

    .centerDiv {
        text-align: center;
        font-size: medium;
        margin: 10px;
        padding: 10px;
    }

    .padding_and_Margin {
        padding: 10px;
        margin: 10px;
    }
</style>
<div class="row">
    <div class="centerDiv">
        <img src="@Url.Content(Session["ImagePath"].ToString())" alt="Child Image" width="150" height="150" class="image float-left" />
    </div>
    <div class="centerDiv">
        <h2> <b>welcom @Session["Name"] Admin</b> </h2>
    </div>
</div>
<div class="row">
    <h2>Admin Details</h2>
    <div class="col-md-12 p">
        <img src="@Url.Content(Model.Adm_Image_Path)" alt="Child Image" width="150" height="150" />
    </div>
</div>

<table class="table table-bordered table-hover" id="table">
<tr>
    <th>
        @Html.Label("Admin Name")
    </th>
    <th>
        @Html.Label("Admin Email")
    </th>
    <th>
       @Html.Label("Phone Number")
    </th>
</tr>
    <tr>
        <td>
            @Html.DisplayFor(x=>x.Adm_Name)
        </td>
        <td>
            @Html.DisplayFor(x=>x.Adm_Email)
        </td>
        <td>
            @Html.DisplayFor(x=>x.Adm_Phone)
        </td>
        
    </tr>
  
    


</table>