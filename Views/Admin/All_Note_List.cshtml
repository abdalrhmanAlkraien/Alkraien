@using PagedList;
@using PagedList.Mvc;

@model IPagedList<adminSection.Models.Note>
@{
    ViewBag.Title = "All_Note_List";
    Layout = "~/Views/Shared/_AdminLayoutPage.cshtml";
}
<style>
    .ma{
        margin:10px;
        padding:10px;
    }
</style>
<style>
    .p {
        padding: 10px;
        margin: 10px;
        text-align: center;
    }

    .butoon {
        background-color: aqua;
        padding: 4px;
        border: solid 1px #000000;
    }

    .panel {
        display: none;
    }

    .hi {
        float: right;
    }

    .image {
        border-radius: 50%;
        padding: 10px;
        margin: 10px;
        float: right;
    }

    .text {
        padding: 10px;
        margin: 10px;
        text-align: center;
    }

    .centerDiv {
        text-align: center;
        font-size: medium;
        margin: 10px;
        padding: 10px;
    }

    .padding_and_Margin {
        padding: 10px;
        margin: 10px;
    }
</style>
<div class="row">
    <div class="centerDiv">
        <img src="@Url.Content(Session["ImagePath"].ToString())" alt="Child Image" width="150" height="150" class="image float-left" />
    </div>
    <div class="centerDiv">
        <h2> <b>welcom @Session["Name"] Admin</b> </h2>
    </div>
</div>

<div class="row padding_and_Margin h2">
    All Note List
</div>


<div class="row">
    @foreach (var i in Model)
    {
        <table class="table table-hover table-bordered table-responsive ma">
            <tr>
                <td>
                    Child Name
                </td>
                <td>
                    @i.child.Chi_First_Name
                </td>
            </tr>
            <tr>
                <td>
                    Note Title
                </td>
                <td>
                    @i.Note_title
                </td>
            </tr>
            <tr>
                <td>
                    Note Content
                </td>
                <td>
                    @i.note_content
                </td>
            </tr>
            <tr>
                <td>
                    Note Date
                </td>
                <td>
                    @i.Note_Date
                </td>
            </tr>
        </table>
        @Html.ActionLink("More Details", "moreNote_Info", "Admin",new { id = i.Note_Id },new { @class = "btn btn-primary" })
        

    }
</div>

<div class="row">
    @Html.PagedListPager(Model, page => Url.Action("All_Note_List", new { page }))


</div>