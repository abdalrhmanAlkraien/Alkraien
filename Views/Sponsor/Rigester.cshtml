@model adminSection.Models.The_Sponsor
@{
    ViewBag.Title = "Rigester";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Rigester</h2>

@using (Html.BeginForm("Rigester", "Sponsor", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    <div class="form-horizontal">
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            @Html.LabelFor(x => x.Sponsor_FullName, htmlAttributes: new { @class = "label-control col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(x => x.Sponsor_FullName, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(x => x.Sponsor_FullName, "", new { @class = "text-danger" })
            </div>
        </div>


        <div class="form-group">
            @Html.LabelFor(x => x.Sponsor_Phone, htmlAttributes: new { @class = "label-control col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(x => x.Sponsor_Phone, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(x => x.Sponsor_Phone, "", new { @class = "text-danger" })
            </div>

        </div>


        <div class="form-group">
            @Html.LabelFor(x => x.Sponsor_Email, htmlAttributes: new { @class = "label-control col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(x => x.Sponsor_Email, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(x => x.Sponsor_Email, "", new { @class = "text-danger" })
            </div>

        </div>

        <div class="form-group">
            @Html.LabelFor(x => x.Sponsor_Password, htmlAttributes: new { @class = "label-control col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(x => x.Sponsor_Password, new { htmlAttributes = new { id = "Password", @class = "form-control" } })
                @Html.ValidationMessageFor(x => x.Sponsor_Password, "", new { @class = "text-danger" })
            </div>

        </div>

        <div class="form-group">
            @Html.LabelFor(x => x.Sponsor_Confirm_Password, htmlAttributes: new { @class = "label-control col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(x => x.Sponsor_Confirm_Password, new
           {
               htmlAttributes = new
               {
                   id = "Confirm_Password",
                   @class = "form-control",
                   required = "required"
               }
           })
                @Html.ValidationMessageFor(x => x.Sponsor_Confirm_Password, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(x => x.Sponsor_Location, htmlAttributes: new { @class = "label-control col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(x => x.Sponsor_Location, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(x => x.Sponsor_Location, "", new { @class = "text-danger" })
            </div>

        </div>

        <div class="form-group">
            @Html.LabelFor(x => x.Sponsor_Image_Path, htmlAttributes: new { @class = "label-control col-md-2" })
            <div class="col-md-10">
                <input type="file" id="ImageFile" name="ImageFile" class="form-control" required />
                @Html.ValidationMessageFor(x => x.Sponsor_Image_Path, "", new { @class = "text-danger" })
            </div>

        </div>


        <div class="row">
            <div class="col-md-2">
                <input type="submit" value="save" id="Save" class="btn btn-default" />
            </div>
            @*<div class="col-md-2">
                    @Html.ActionLink("login", "login", "Minsitry", null, new { @class = "btn btn-default" })
                </div>*@
        </div>
    </div>


}

<script src="~/Scripts/jquery-1.10.2.js"></script>
<script>
    $(document).ready(function ()
    {
        $("#Save").click(function () {

                var password = document.getElementById("Password").value;
                var Confirm_Password = document.getElementById("Confirm_Password").value;
                if (password != Confirm_Password) {
                    alert("The Password And Confirm Password Not Match");
                }





        });
    });

</script>

