@model adminSection.Models.Visitor
@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/_LoginLayoutPage1.cshtml";
}

<h2>Login</h2>
<div class="form-horizontal">
    <style>
        .bu{
        padding:10px;
        margin:10px;
    }
    </style>
    @using (Html.BeginForm())
    {
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            @Html.LabelFor(x =>x.Visitor_Email , htmlAttributes: new { @class = "label-from col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(x => x.Visitor_Email, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(x => x.Visitor_Email, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(x => x.Visitor_Password, htmlAttributes: new { @class = "label-from col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(x => x.Visitor_Password, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(x => x.Visitor_Password, "", new { @class = "text-danger" })
            </div>
        </div>


        <div class="form-group">
            <div class="col-md-2">
                <input type="submit" value="Login" class="btn btn-primary bu"  />
            </div>
            <div class="col-md-2">
                @Html.ActionLink("Rigester", "Rigester", "Visitor", null, new { @class = "btn btn-primary bu" })
            </div>
        </div>

    }



</div>
