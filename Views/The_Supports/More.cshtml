@model adminSection.Models.Home_Child_Care
@{
    ViewBag.Title = "More";
    Layout = "~/Views/Shared/_The_SupportsLayout.cshtml";
}
<style>
    .btn {
        margin: 0 20px 20px 50px;
    }

    .p {
        padding: 10px;
        margin: 10px;
        text-align: center;
    }

    .butoon {
        background-color: aqua;
        padding: 4px;
        border: solid 1px #000000;
    }

    .panel {
        display: none;
    }

    .hi {
        float: right;
    }

    .image {
        border-radius: 50%;
        padding: 10px;
        margin: 10px;
        float: right;
    }

    .text {
        padding: 10px;
        margin: 10px;
        text-align: center;
    }

    .centerDiv {
        text-align: center;
        font-size: medium;
        margin: 10px;
        padding: 10px;
    }

    .padding_and_Margin {
        padding: 10px;
        margin: 10px;
    }
</style>
<div class="row">
    <div class="centerDiv">
        <img src="@Url.Content(Session["ImagePath"].ToString())" alt="Child Image" width="150" height="150" class="image float-left" />
    </div>
    <div class="centerDiv">
        <h2> <b>welcom @Session["Name"] Ministry admin</b> </h2>
    </div>
</div>

<div class="row padding_and_Margin h2">
    More Details Home Care
</div>

<div class="row">
    <div class="col-md-4">
        @Html.ActionLink("Child List", "Child_List", "The_Supports", new { id = Model.Home_ID }, new { @class = "btn button padding_and_Margin" })
    </div>
</div>

<table class="table table-bordered table-hover table-responsive">
    <tr>
        <td>
            @Html.LabelFor(x => x.Home_Name)
        </td>
        <td>
            @Html.LabelFor(x => x.Home_Child_Gender)
        </td>
        <td>
            @Html.LabelFor(x => x.Home_Age_Group)
        </td>
        <td>
            @Html.LabelFor(x => x.Home_Email)
        </td>
        <td>
            @Html.LabelFor(x => x.Home_Location)
        </td>
        <td>
            @Html.LabelFor(x => x.Home_Phone)
        </td>
        @{ 
            if (Model.Home_Website != null)
            {
                <td>
                      @Html.LabelFor(x => x.Home_Website)
                </td>
            }
         }

    </tr>
    <tr>
        <td>
            @Html.Label(Model.Home_Name)
        </td>
        <td>
            @Html.Label(Model.Home_Child_Gender)
        </td>
        <td>
            @Html.Label(Model.Home_Age_Group.ToString())
        </td>
        <td>
            @Html.Label(Model.Home_Email)
        </td>
        <td>
            @Html.Label(Model.Home_Location)
        </td>
        <td>
            @Html.Label( Model.Home_Phone)
        </td>
        
            @{
                if (Model.Home_Website != null)
                {
                <td>
                    @Html.LabelFor(x => x.Home_Website)
                </td>
                }
            }
        
    </tr>
    
</table>

