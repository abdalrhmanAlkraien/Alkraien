@model adminSection.Models.Parent
@{
    ViewBag.Title = "Pareent login";
    Layout = "~/Views/Shared/_LoginLayoutPage1.cshtml";
}

<h2>login</h2>
<div class="form-horizontal">
    <style>
        .bu{
        padding:10px;
        margin:10px;
    }
    </style>
    @using (Html.BeginForm())
    {
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            @Html.LabelFor(x => x.Parent_Email, htmlAttributes: new { @class = "label-from col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(x => x.Parent_Email, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(x => x.Parent_Email, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(x => x.Parent_Password, htmlAttributes: new { @class = "label-from col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(x => x.Parent_Password, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(x => x.Parent_Password, "", new { @class = "text-danger" })
            </div>
        </div>


        <div class="form-group">
            <div class="col-md-2">
                <input type="submit" value="Login Parent" class="btn btn-primary bu"/>
            </div>
            
        </div>

    }



</div>