@model ICollection<adminSection.Models.volunteer>
@{
    ViewBag.Title = "volunteer_Visitor";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    .btn{
        margin:20px;
    }
</style>
<h2>volunteer_Visitor</h2>
<div class="row">
    <div class="col-md-12">
        <div class="col-md-4">
            @foreach (var i in Model)
            {
                <div class="col-md-4">
                    <a href=@Url.Action("volunteer_Details", new { id = i.Volunteer_Id } )>
                        <table class="table table-hover table-bordered table-responsive">
                            <tr>
                                <td>
                                    @Html.Label("volunteer Title")
                                </td>
                                <td>
                                    @Html.Label(i.Volunteer_Title)
                                </td>
                            </tr>
                            <tr>
                                <td>
                                    @Html.Label("volunteer Dicription")
                                </td>
                                <td>
                                    @Html.Label(i.Volunteer_Decription)
                                </td>
                            </tr>

                        </table>

                    </a>
                    @Html.ActionLink("More Details", "volunteer_Details", "Minsitry", new { id = i.Volunteer_Id }, new { @class = "btn btn-primary" })
                </div>
            }

        </div>
    </div>
    
</div>
