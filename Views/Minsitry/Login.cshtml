

@model adminSection.Models.Minsitry
@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/_LoginLayoutPage1.cshtml";
}


<style>
    .background {
        background-color: seagreen;
    }
  
    .bu{
        padding:10px;
        margin:10px;
    }

</style>
<
<h2>Login</h2>
<div class="form-horizontal">
   
    @using (Html.BeginForm())
    {
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            @Html.LabelFor(x => x.Min_Email, htmlAttributes: new { @class = "label-from col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(x => x.Min_Email, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(x => x.Min_Email, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(x => x.Password, htmlAttributes: new { @class = "label-from col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(x => x.Password, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(x => x.Password, "", new { @class = "text-danger" })
            </div>
        </div>


        <div class="form-group">
            <div class="col-md-2">
                <input type="submit" value="Login Admin" class="btn btn-primary bu"  />
            </div>
            <div class="col-md-2">
                @Html.ActionLink("Rigester Admin", "Rigester", "Minsitry", null, new { @class = "btn btn-primary bu" })
            </div>
        </div>

    }



</div>


