@using PagedList;
@using PagedList.Mvc;

@model IPagedList<adminSection.Models.volunteer>
@{
    ViewBag.Title = "volunteerList";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>volunteerList</h2>
<div class="row">
    <div class="col-md-12">
        @foreach (var i in Model)
        {
            <div class="col-md-4">
                <a href=@Url.Action("volunteer_Details", new { id = i.Volunteer_Id } )>
                    <table class="table table-hover table-bordered table-responsive">
                        <tr>
                            <td>
                                @Html.Label("volunteer Title")
                            </td>
                            <td>
                                @Html.Label(i.Volunteer_Title)
                            </td>
                        </tr>
                        <tr>
                            <td>
                                @Html.Label("volunteer Dicription")
                            </td>
                            <td>
                                @Html.Label(i.Volunteer_Decription)
                            </td>
                        </tr>

                    </table>

                </a>
                @Html.ActionLink("More Details", "volunteer_Details", "Minsitry", new { id = i.Volunteer_Id }, new { @class = "btn btn-primary" })
            </div>
        }
    </div>
</div>
<div class="row">
    <div class="col-lg-12">
        @Html.PagedListPager(Model, page => Url.Action("volunteerList", new { page }))
    </div>
</div>
